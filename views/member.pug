extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='passcode') Account Validation:
      input#name.form-control(type='number' name='passcode' required='true' value=(undefined===user ? '' : user.passcode))
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg


